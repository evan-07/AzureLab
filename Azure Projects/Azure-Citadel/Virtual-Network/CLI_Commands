
###Create Resource Group
rg=rg-lab
location=westus2

az group create \
--name $rg \
--location $location

###Create VNET
vnet=vnet1
vnetip=10.1.0.0/16

az network vnet create \
--resource-group $rg \
--location $location \
--address-prefixes $vnetip \
--name $vnet


###Create Subnets
subnet1=vnet1-subnet1
subnet1ip=10.1.1.0/24
subnet2=vnet1-subnet2
subnet2ip=10.1.2.0/24

az network vnet subnet create 
	--address-prefixes $subnet1ip 
	--name $subnet1
	--resource-group $rg 
	--vnet-name $vnet

az network vnet subnet create 
	--address-prefixes $subnet2ip 
	--name $subnet2
	--resource-group $rg 
	--vnet-name $vnet
